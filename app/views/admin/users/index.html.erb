<div class='container'>
  <div class="row">
    <div class="col-sm-8 m-5">

      <h3>Users</h3>
      <table>
        <tr>
        <th style="width: 30%">アカウント名</th>
        <th style="width: 40%">ステータス</th>
        <th style="width: 30%">編集</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
          <td><%= user.name %></td>
          <td><%= user.is_valid %></td>
          <td>
            <%= link_to edit_admin_user_path(user.id) do %>
              <i class="far fa-edit"></i>
            <% end %>
          </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>
