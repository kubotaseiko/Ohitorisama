<h2>Review</h2>
<p><%= shop.reviews.count %>ä»¶</p>
<% shop.reviews.each do |review| %>
  <table class="table table-sm">
    <tbody>
      <td style="width: 20%" class="text-cente" ><%= review.created_at.strftime('%Y/%m/%d') %></td>
      <td style="width: 40%"><%= review.review_text %></td>
      <td style="width: 10%"><%= review.user.name %><td>
      <td style="width: 20%"><div class="review-rating" data-score="<%= review.rate %>"></div><td>
      <td style="width: 10%">
        <% if review.user == current_user %>
        <%= link_to  shop_review_path(review.shop, review), method: :delete do %>
          <i class="fas fa-times-circle"></i>
        <% end %>
        <% end %>
      <td>
    </tbody>
  </table>
<% end %>

<script>
  $('.review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>
