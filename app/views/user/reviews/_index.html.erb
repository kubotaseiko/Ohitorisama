  <% @shop.reviews.each do |review| %>
    <table class="table table-sm">
      <tbody>
        <td style="width: 20%" class="text-cente" ><%= review.created_at.strftime('%Y/%m/%d') %></td>
        <td style="width: 40%"><%= review.review_text %></td>
        <td style="width: 10%">
          <%= link_to user_path(review.user.id) do %>
            <%= attachment_image_tag review.user, :profile_image, size: '30x30', fallback: 'no_image.jpg', class: "rounded-circle" %></br>
            <%= review.user.name %>
          <% end %>
        <td>
        <td style="width: 20%"><i class="far fa-star">&nbsp;<%= review.rate %></i></div><td>
        <td style="width: 10%">
          <% if review.user == current_user %>
          <%= link_to  shop_review_path(review.shop, review), method: :delete, remote: true do %>
            <i class="fas fa-times-circle"></i>
          <% end %>
          <% end %>
        <td>
      </tbody>
    </table>
  <% end %>