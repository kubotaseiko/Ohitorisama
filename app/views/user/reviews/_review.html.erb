<div id='star.form-group'>
  <%= f.label :rate %>
  <%= f.hidden_field :rate, id: :review_star %>
<%= simple_form_for ([@shop, shop.reviews.build]) do |f| %>
  <div id="rating-form">
    <label>Rating</label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>

</div>
