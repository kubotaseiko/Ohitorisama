<% if user_signed_in? %>

  <%= form_with(model:[shop, review]) do |f| %>
      <%= f.text_area :review_text, rows:'8',placeholder: "review", size: "50" %>
        <div id="rate-form">
          <label>Rating</label>
        </div>
       <%= f.submit "送信" %>
  <% end %>

<% end %>

<script>
  $('#rate-form').raty({
    path: '/assets/',
    scoreName: 'review[rate]'
  });
  
</script>
