
<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to relationship_path(user.id), method: :delete do %>
    フォローを外す
    <% end %>
  <% else %>
    <%= link_to relationships_path(followed_id: user.id), method: :post do %>
    フォローする
    <% end %>
  <% end %>
<% end %>