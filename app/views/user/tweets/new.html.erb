<div class='container'>
  <div class="row g-3 mt-5">
    <div class="form-area col-lg-6 p-5 offset-md-3">
      <div class="page-title">New tweet</div>
        <div class='errors-area p-2'>
          <% if @tweet.errors.any? %>
            <%= @tweet.errors.count %>件のエラーが発生しました</br>
            <% @tweet.errors.full_messages.each do |message| %>
              <li>※&nbsp;<%= message %></li>
            <% end %>
          <% end %>
        </div>
        <div class="form">
          <%= form_with model: @tweet,local:true do |f| %>
            <div class="field form-group">
              <%= f.text_area :tweet, rows:'8', placeholder: "気軽につぶやこう！", size: "50", class: "form-control" %>
            </div>
            <div class='text-center'>
              <%= button_tag :method => :get, :class => "btn", onfocus: "this.blur();" do %>
                <span class= "col btnripple">
                  <i class="fas fa-paper-plane">&nbsp;投稿する</i>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>



