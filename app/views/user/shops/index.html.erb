<div class='container'>

<h2>投稿一覧</h2>

  <% @shops.order('updated_at DESC').each do |shop| %>
  <div class="card" style="width: 20rem;">
    <%= attachment_image_tag shop, :shop_image, size: '200x200', format: 'jpeg', class: "card-img-top" %>
    <%= link_to shop.shop_name, shop_path(shop.id) %>
  </div>
  <% end %>


<h2>タグリスト</h2>

<% @tag_list.each do |list| %>
  <%= link_to list.tag_name, tag_shops_path(tag_id: list.id) %>
  <%= "(#{list.shops.count})" %>
<% end %>

</div>

<h2>gmap</h2>
<div id='map'></div>

<style>
#map {
  height: 300px;
  width: 300px;
}
</style>

<script>
let map

function initMap(){
  geocoder = new google.maps.Geocoder()

  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: 40.7828, lng:-73.9653},
    zoom: 12,
  });

  marker = new google.maps.Marker({
    position:  {lat: 40.7828, lng:-73.9653},
