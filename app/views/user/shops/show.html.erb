
<div class='container'>
    <div cladd="col-12 mt-5">
      <!--地図の表示-->
      <%= render 'user/shops/map', shop: @shop %>
      <div class="shop-title">
        <%= @shop.shop_name %>
        <!--bookmarkボタン-->
        <span id='bookmark_btn'>
          <%= render 'user/bookmarks/bookmark_button', shop: @shop %>
        </span>
      </div>
  </div>

  <div class="row pl-4 pt-5">
    <div class="col-lg-5 col-md-12">
      <%= attachment_image_tag @shop, :shop_image, :fill, 400, 400, format: 'jpeg', class: 'rounded' %>
    </div>

    <div class="col-lg-7 col-md-12">
      <div class="row">
        <div class="col-lg-9 col-12">
          <!--星評価-->
          <h3 class="far fa-star mt-3">&nbsp;
            <% if @shop.rate_average == nil %>
            評価なし
            <% else %>
            <%= @shop.rate_average.round(1) %>
            <% end %>
          </h3></br>
          <%= @shop.introduction %>
        </div>
        <div class="col-lg-3 col-12">
          <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, size: '80x80', fallback: 'no_image.jpg', class: "rounded-circle" %>
          <% end %>
        </div>
      </div>

      <div class='m-5'>
        <table>
          <tr>
            <th style="width: 20%">住所</th>
            <td style="width: 80%"><%= @shop.address %></td>
          </tr>
          <tr>
            <th>Tel</th>
            <td><%= @shop.tell %></td>
          </tr>
          <tr>
            <th>定休日</th>
            <td><%= @shop.holiday %></td>
          </tr>
        </table>
      </div>

      <!--review-->
      全 <%= @shop.reviews.count %> 件
      <%= link_to shop_reviews_path(@shop.id), class: 'text-right' do %>
        <i class="fas fa-paper-plane test-right">&nbsp;レビューする</i>
      <% end %>
      <% @shop.reviews.includes(:user).limit(3).each do |review| %>
        <table class="table table-sm">
          <tbody>
            <td style="width: 15%" class="text-cente" ><%= review.created_at.strftime('%m/%d') %></td>
            <td style="width: 60%"><%= review.review_text %></td>
            <td style="width: 15%"><i class="far fa-star"></i>&nbsp;<%= review.rate %></div><td>
            <td style="width: 5%">
              <%= attachment_image_tag @user, :profile_image, size: '30x30', fallback: 'no_image.jpg', class: "rounded-circle" %>
            </td>
            <td style="width: 5%">
              <% if review.user == current_user %>
                <%= link_to  shop_review_path(review.shop, review), method: :delete, remote: true do %>
                  <i class="fas fa-times-circle"></i>
                <% end %>
              <% end %>
            </td>
          </tbody>
        </table>
      <% end %>

      <% if @shop.reviews.size > 3%>
      <%= link_to '>>もっとみる', shop_reviews_path(@shop.id), class: 'text-right' %>
      <% end %>
    </div>
  </div>

    <div class="author-edit">
    <% if current_user.id == @shop.user_id.to_i %>
      <%= link_to '編集', edit_shop_path(@shop.id) %>
      <%= link_to '削除', shop_path(@shop.id), method: :delete, remote: true, "data-confirm" => "本当に消しますか？" %>
    <% end %>
    </div>

</div>