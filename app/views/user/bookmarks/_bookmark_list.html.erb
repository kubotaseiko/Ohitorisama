
<h4>ブックマーク一覧</h4>

<table class="table table-sm">
  <thead>
    <tr>
      <th>写真</th>
      <th>店名</th>
      <th>詳細</th>
      <th>ユーザー</th>
    </tr>
  </thead>
  <tbody>
    <% bookmarks.each do |bookmark| %>
      <tr>
        <td>
          <%= link_to shop_path(bookmark.shop) do %>
            <%= attachment_image_tag bookmark.shop, :shop_image, :fill, 150, 150, format: 'jpeg' %>
          <% end %>
        </td>
        <td>
          <%= link_to shop_path(bookmark.shop) do %>
            <%= bookmark.shop.shop_name %>
          <% end %>
        </td>
        <td>
          <li>住所：<%= bookmark.shop.address %></li>
          <li>営業時間：カラム追加する</li>
          <li>定休日：<%= bookmark.shop.holiday %></li>
        </td>
        <td>
          <%= link_to user_path(bookmark.shop.user) do %>
            <%= attachment_image_tag bookmark.shop.user, :profile_image, size: '40x40', fallback: 'no_image.jpg', class: "rounded-circle" %></br>
            <%= bookmark.shop.user.name %>さん
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
