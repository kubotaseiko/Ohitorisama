  </div>

  <div class="footer-sm d-md-block d-lg-none pb-3 fixed-bottom">
    <% if user_signed_in? %>
      <ul class="navbar-nav d-flex flex-row text-center">
        <li class="nav-link col-3 d-md-block d-lg-none p-0">
          <%= link_to new_shop_path do %>
            <i class="far fa-plus-square"></i>
          <% end %>
        </li>
        <li class="nav-link col-3 d-md-block d-lg-none p-0">
