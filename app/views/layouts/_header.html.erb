<header class="sticky-top">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Ohitorisama</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <% if user_signed_in? %>
        <div class="col-auto search-form m-auto form-inline">
          <%= form_with url: search_path, method: :get, local: true do |f| %>
            <%= f.text_field :keyword, value: @keyword, placeholder: "店名や住所で検索！", class: "form-control form-control-sm" %>
            <button type="submit" class="btn btn-outline-success btn-sm">
              <i class="fas fa-search" aria-hidden="true"></i>
            </button>
          <% end %>
        </div>
        <div id="sp-menu" class="collapse navbar-collapse hidden-xs" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="nav-link">
              <%= render 'user/partial/circle' %>
            </li>
            <li class="nav-link">
              <%= link_to 'MyPage',user_path(current_user), data: {"turbolinks" => false} %>
            </li>
            <li class="nav-link">
              <%= link_to 'Shops', shops_path %>
            </li>
            <li class="nav-link">
              <%= link_to 'Post', new_shop_path %>
            </li>
            <li class="nav-link">
              <%= link_to 'Contact', new_contacts_path %>
            </li>
            <li class="nav-link">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>
              <% end %>
            </li>
          <% else %>
            <li class="nav-link text-light"><%= link_to ' Home', root_path  %></li>
            <li class="nav-link text-light"><%= link_to ' About', about_path %></li>
            <li class="nav-link text-light"><%= link_to ' sign up', new_user_registration_path %></li>
            <li class="nav-link text-light"><%= link_to ' login', new_user_session_path %></li>
          </ul>
        </div>
      <% end %>

    <div id="hm-icon" class="">
      <a class="menu-trigger" href="#">
        <span></span>
        <span></span>
        <span></span>
      </a>
    </div>

    </div>
  </nav>
</header>